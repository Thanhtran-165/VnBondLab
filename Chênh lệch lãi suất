    table.cell(layer_table, 3, 1, " TRANG THAI ", bgcolor=color.new(#3949AB, 0), text_color=color.white, text_size=size.small)
    
    layer1_status = layer1_pct >= 80 ? "NGUY HIEM" : layer1_pct >= 60 ? "CAO" : layer1_pct >= 40 ? "TRUNG BINH" : layer1_pct >= 20 ? "THAP" : "RAT THAP"
    layer1_bg = f_layerColor(layer1_pct)
    
