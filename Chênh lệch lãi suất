bgcolor(show_pane4 and layer1_pct >= 60 ? color.new(#FF6B6B, 90) : na, title="Layer1 High")
bgcolor(show_pane4 and layer2_pct >= 60 ? color.new(#FFA726, 90) : na, title="Layer2 High")
bgcolor(show_pane4 and layer3_pct >= 60 ? color.new(#42A5F5, 90) : na, title="Layer3 High")

